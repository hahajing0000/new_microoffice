<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zy.microoffice.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.zy.microoffice.entity.UserEntity">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="phonenumber" jdbcType="VARCHAR" property="phonenumber" />
        <result column="pwd" jdbcType="VARCHAR" property="pwd" />
        <result column="realname" jdbcType="VARCHAR" property="realname" />
    </resultMap>

<!--    <select id="AddUser" resultType="boolean">-->
<!--        select * from s_user where id = #{id}-->
<!--        -->
<!--    </select>-->
    <insert id="register">
        insert into s_user(phonenumber,pwd,ctime) values(#{phonenumber},#{pwd},SYSDATE());
    </insert>
    <select id="getUserById" resultType="com.zy.microoffice.entity.UserEntity">
        select * from s_user where id=#{id}
    </select>
    <select id="login" resultType="com.zy.microoffice.entity.UserEntity">
        select * from s_user where phonenumber=#{phoneNumber} and pwd=#{pwd}
    </select>
    <update id="modifyRealName">
        update s_user set realname=#{realName} where id=#{id}
    </update>
    <select id="getUserByPhoneNumber" resultType="com.zy.microoffice.entity.UserEntity">
        select * from s_user where phonenumber=#{phonenumber};
    </select>

</mapper>