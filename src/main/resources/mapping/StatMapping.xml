<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zy.microoffice.mapper.StatMapper">

    <resultMap id="BaseResultMap" type="com.zy.microoffice.entity.StatEntity">

    </resultMap>
    <insert id="addStat">
        insert into b_stat(userid,companyname,post,interviewtime,interviewresult,requestinfo,ctime) values(#{userid},#{companyname},#{post},#{interviewtime},0,#{requestinfo},SYSDATE())
    </insert>
    <update id="modifyStat">
        update b_stat set userid=#{userid},companyname=#{companyname},post=#{post},interviewtime=#{interviewtime},requestinfo=#{requestinfo} where id=#{id}
    </update>
    <delete id="remove">
        delete from b_stat where id=#{id}
    </delete>
    <select id="getStatById" parameterType="int" resultType="com.zy.microoffice.entity.StatEntity">
        select s.*,u.realname from b_stat s,s_user u where s.userid=u.id and s.id=#{id};
    </select>
    <select id="getStats" parameterType="String" resultType="com.zy.microoffice.entity.StatEntity">
        select s.*,u.realname from b_stat s,s_user u where s.userid=u.id
        <if test="starttime != null and starttime != ''">
            and s.interviewtime &gt;= #{starttime}
        </if>
        <if test="endtime != null and endtime != ''">
            and s.interviewtime &lt;= #{endtime}
        </if>
    </select>

</mapper>